<h1><%= "#{@patient.first_name}" " " "#{@patient.last_name}" %></h1>


<h2>Perscriptions <span class="add-link"><%= link_to "Add Prescription", new_patient_prescription_path(@patient.id)%></span> </h2>
<table class="table">
  <thead>
  <tr>
    <th>Medication</th>
    <th>Dosage/Schedule</th>
    <th>Dates</th>
  </tr>
  </thead>
  <tbody>


  <% @patient.prescriptions.each do |prescription| %>
    <tr>
      <td><%= prescription.medication.name %></td>
      <td><%= prescription.dosage %> <%= prescription.schedule %></td>
      <td><%= prescription.starts_on %> - <%= prescription.ends_on %></td>
    </tr>
  <% end %>
  </tbody>


</table>




